{
  "basePath": ".",
  "permalinks": {
    "relative": false
  },
  "collections": {
    "pages": {
      "pattern": "pages/*.html"
    }
  },
  "permalinks": {
    "relative": false,
    "linksets": [
      {
        "match": { "collection": "pages" },
        "pattern": ":title"
      }
    ]
  },
  collections: {
    products: {
      pattern: 'products/*.html'
    },
    pages: {
      pattern: 'pages/*.html'
    },
    posts: {
      pattern: 'posts/!(index).html',
      sortBy: 'date',
      reverse: true
    }
  },
  permalinks: {
    relative: false,
    linksets: [
      {
        match: { collection: 'products' },
        pattern: 'products/:title'
      },
      {
        match: { collection: 'pages' },
        pattern: ':title'
      },
      {
        match: { collection: 'posts' },
        pattern: 'blog/:date/:title'
      }
    ]
  }
}